@{
    Layout = null;
}
<style>
    *{
    margin: 0;
    padding: 0;
}
.main {
    width: 100%;
    height: 100%;
    background-color: #0F172A;
}

.wrap-main {
    width: 60%;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px 0 20px 0;
}
.img-main {
    width: 50%;
}

.warp-img {
    width: 480px;
    height: 100%;
    overflow: hidden;
    /* object-fit: contain; */
    border-radius: 20px;
}
.warp-img img {
    border-radius: 20px;
    object-fit: cover;
    width: 100%;
    height: 100%;
}
h1 {
    color: #FFFFFF;
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 600;
    font-size: 52px;
    line-height: 62px;
/* identical to box height, or 119% */
    letter-spacing: -2px;
}

p {
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 30px;
/* or 167% */


/* blue-gray/400 */
    color: #94A3B8;
}

.detail {
    width: 50%;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
}
.warp-detail {
    width: 100%;
    height: 100%;
    padding-left: 45px;
    box-sizing: border-box;
}

.btn button {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #1E293B;
    border-radius: 35px;
    font-size: 16px;
    color: #FFFFFF;
    font-weight: 500;
}

.btn {
    padding-top: 20px;
    width: 100%;
    height: 50px;
}

button {}

.btn button img {
    padding-right: 20px;
}
.form-input {
    font-weight: 400;
    font-size: 18px;
    color: #E4E4E7;
}

.input-content {
    /* box-sizing: border-box; */
}

.detail-content {
    padding-top: 20px;
}



input#name {
    width: 96%;
    border: 1px solid #334155;
    border-radius: 35px;
    /* padding: 17px 22px; */
    height: 40px;
    background: #334155;
    font-size: 16px;
    padding-left: 10px;
    color: #ffff;
}

.wrap-input {
    box-sizing: border-box;
    width: 100%;
    padding-top: 15px;
}
input#email {
    width: 96%;
    border: 1px solid #334155;
    border-radius: 35px;
    /* padding: 17px 22px; */
    height: 40px;
    background: #334155;
    font-size: 16px;
    padding-left: 10px;
    color: #ffff;

}
input#Password {
    width: 96%;
    border: 1px solid #334155;
    border-radius: 35px;
    /* padding: 17px 22px; */
    height: 40px;
    background: #334155;
    font-size: 16px;
    padding-left: 10px;
    color: #ffff;

}
.checkbox-content {
    display: flex;
}
.rm {
    font-size: 16px;
    color: #ffff;
}
.create-ac {
    width: 180px;
    height: 40px;
    background: #2563EB;
    border-radius: 50px;
}

</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="main">
        <div class="wrap-main">
            <div class="img-main">
                    <div class="warp-img">
                        <img src="~/img/image 25.png" />
                    </div>
            </div>
            <div class="detail">
               <div class="warp-detail">
                <div class="detail-title">
                    <h1>Join us today 👋</h1>
                    <p>Clarity gives you the blocks and components you need to create a truly professional website.</p>
                    <div class="btn"><button>
                        
                        <img src="~/img/google 2.png" />
                        Sign up with Google
                    </button></div>
                </div>
                <div class="detail-content">
                    <div class="input-content">
                        <div class="wrap-input">
                             <label for="name" class ="form-input">First & Last Name</label> <br>
                        <input type="text" for ="name" id="name" placeholder="   i.e. Davon Lean">
                        </div>
                        <div class="wrap-input">
                            <label for="email" class ="form-input">Email Address</label> <br>
                       <input type="email" for ="email" id="email" placeholder="   i.e. davon@mail.com">
                       </div>
                       <div class="wrap-input">
                        <label for="Password" class ="form-input">Password</label> <br>
                   <input type="Password" for ="Password" id="Password" placeholder="   **********">
                   </div>

                    </div>
                    <div class="checkbox-content">
                       <input type="checkbox"> <p class="rm">Remember me</p>
                    </div>
                    <div class="create">
                        <button class="create-ac" id="btn-register"><p style="color: #ffff;">Create Account</p></button>
                        <p>Don't have an account? <a style="text-decoration: none; color:#2563EB ;" href="#">Create free account</a></p>
                    </div>
                </div>
               </div>
            </div>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    
    <script src="
https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.all.min.js
"></script>
    <script>
        $(document).ready(function(){


        })
        $("#btn-register").on("click", function(){
            register();
        })

        function register(){
            var obj = {
                username: $("#name").val().trim(),
                email: $("#email").val().trim(),
                password: $("#Password").val().trim(),
            }

            $.ajax({
                url: "@Url.Action("RegisterVM","Account")",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(obj),
                success: function (responseData) {
                    console.log(responseData);
                    if (responseData.status == "400"){
                        var contentError = "<ul>";
                        responseData.errors.forEach(function (item, index) {
                            contentError += "<li class='text-start'>" + item + "</li>";
                        })
                        contentError += "</ul>";
                        var swalSubTitle = "<p class='swal__admin__subtitle'> Không thành công</p>";
                        Swal.fire(
                            'Đăng ký' + swalSubTitle,
                            contentError,
                            'warning'
                        );
                    }
                    if(responseData.status == "403"){
                         Swal.fire(
                            'Không thành công',
                            'Tạo tài khoản không thành công.',
                            'warning'
                        );
                    }
                    else{
                        Swal.fire(
                            'Thành công',
                            'Tạo tài khoản thành công.',
                            'success'
                        );
                    }

                },
                error: function (e) {
                    Swal.fire(
                        'Lỗi khi thêm mới tài khoản',
                        'Không thể thêm mới tài khoản, hãy kiểm tra lại thông tin.',
                        'error'
                    );
                }
            });
        }
        
    </script>
</body>
</html>

